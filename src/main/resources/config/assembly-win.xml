<?xml version="1.0" encoding="UTF-8"?>
<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd"
>
  <id>paczka-windows</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>${project.artifactId}</baseDirectory>
  <includeBaseDirectory>true</includeBaseDirectory>
  
  <fileSets>
  	<fileSet>
  		<outputDirectory>/logs</outputDirectory>
  		<directory>${project.build.directory}/logs</directory>
  		<excludes>
  			<exclude>**/*-test*.log</exclude>
  		</excludes>
  	</fileSet>
    <fileSet>
      <outputDirectory>/database</outputDirectory>
      <directory>${project.basedir}/database</directory>
    </fileSet>
    <fileSet>
      <outputDirectory>/database/import</outputDirectory>
      <directory>${project.build.directory}/logs</directory>
      <excludes>
      	<exclude>**/*</exclude>
      </excludes>      
    </fileSet>
    <fileSet>
    	<outputDirectory>/database/scripts</outputDirectory>
    	<directory>${project.build.directory}/ddl</directory>
    	<includes>
    		<include>**/*.sql</include>
    	</includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/config</outputDirectory>
      <directory>${project.build.directory}/config</directory>
      <includes>
      	<include>**/*.properties</include>
      </includes>
    </fileSet>
    <fileSet>
    	<outputDirectory>/</outputDirectory>
    	<directory>${project.build.directory}</directory>
    	<includes>
    		<include>*.jar</include>
    	</includes>
    	<excludes>
    		<exclude>**/*sources*.jar</exclude>
    		<exclude>**/*javadoc*.jar</exclude>
    	</excludes>
    </fileSet>
    <fileSet>
    	<outputDirectory>/</outputDirectory>
    	<directory>${project.build.directory}/classes/scripts</directory>
    	<includes>
    		<include>*.cmd</include>
    		<include>*.bat</include>
    	</includes>
    	<excludes>
    		<exclude>*.sh</exclude> 
    		<exclude>mvnw</exclude>   		
    	</excludes>
    	<fileMode>0755</fileMode>
    </fileSet> 
    <fileSet>
    	<outputDirectory>/utils</outputDirectory>
    	<directory>${project.basedir}/src/main/resources/utils</directory>
    	<excludes>
    		<exclude>**/*linux*</exclude>
    	</excludes>
    </fileSet>   
  </fileSets>
  
</assembly>